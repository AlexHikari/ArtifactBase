<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    android:orientation="vertical">

    <include
        android:id="@+id/home-header"
        layout="@layout/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cardDisplayLarge"
                android:layout_width="150dp"
                android:layout_height="260dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                tools:srcCompat="@drawable/cardplaceholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemSubtypeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/colorTextColor"
                    android:textSize="18sp"
                    tools:text="Item Subtype" />

                <ImageButton
                    android:id="@+id/itemSubtypeImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    tools:src="@drawable/cardtypeitem" />

                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorTextColor"
                    android:textSize="18sp"
                    tools:text="Item Name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/itemGold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/gold_cost"
                        android:textColor="@color/colorTextColor"
                        android:textSize="18sp"
                        tools:text="@string/gold_cost" />

                    <TextView
                        android:id="@+id/itemGoldCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:textColor="@color/colorTextColor"
                        android:textSize="12sp"
                        tools:text="Item gold cost" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/itemIllustratorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topLayout"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/itemMiniImage"
            android:textColor="@color/colorTextColor"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:text="Item Illustrator" />

        <ImageView
            android:id="@+id/itemMiniImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/topLayout"
            android:layout_alignStart="@+id/topLayout"
            android:layout_marginStart="8dp"
            android:layout_marginTop="11dp"
            tools:srcCompat="@drawable/itemminiimageplaceholder" />

        <include
            android:id="@+id/progressView"
            layout="@layout/view_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center" />
    </RelativeLayout>


</LinearLayout>